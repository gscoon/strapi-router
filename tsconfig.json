{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "paths": {
            "@config": [
                "app/config.ts"
            ],
            "@util": [
                "app/util.ts"
            ]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": false,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "types": [
        "node"
    ],
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}